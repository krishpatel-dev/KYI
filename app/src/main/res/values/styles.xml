<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Reusable widget styles -->
    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/purple_500</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">Email</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="LinkStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <attr name="bottomSheetBackground" format="reference" />

    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowAnimationStyle">@style/ActivityTransition</item>
    </style>

    <style name="ActivityTransition">
        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@android:anim/fade_out</item>
    </style>


</resources>
